{
  "extends": "tsconfig/base.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
        "@data/*": ["data/*"],
        "@controllers/*": ["controllers/*"],
        "@models/*": ["models/*"],
        "@providers/*": ["providers/*"],
        "@modules/*": ["modules/*"],
        "@routes/*": ["routes/*"],
    }
  }
}
