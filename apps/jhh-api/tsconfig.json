{
  "extends": "tsconfig/base.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@models/*": ["models/*"],
      "@models/modules/*": ["models/modules/*"],
      "@controllers/*": ["controllers/*"],
      "@providers/*": ["providers/*"],
      "@modules/*": ["modules/*"]
    }
  }
}
