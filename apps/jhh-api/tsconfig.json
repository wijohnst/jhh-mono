{
  "extends": "tsconfig/base.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@data/*": ["data/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@providers/*": ["providers/*"],
      "@routes/*": ["routes/*"]
    }
  }
}
